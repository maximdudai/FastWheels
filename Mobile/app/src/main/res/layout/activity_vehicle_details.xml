<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VehicleDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Marca -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <!-- Modelo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <!-- Ano e Número de Portas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ano"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#333333"
                        android:editable="false"
                        android:padding="10dp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nº Portas"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etDoors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#333333"
                        android:editable="false"
                        android:padding="10dp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Localização -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Localização X"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLocationX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Localização Y"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLocationY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <!-- Disponibilidade -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Disponível de:"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAvailableFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Disponível até:"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAvailableTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:editable="false"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Fotos do Veículo:"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/lvImgVehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:focusable="true"
                android:focusableInTouchMode="false" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>